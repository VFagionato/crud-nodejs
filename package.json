{
  "name": "NodeJSJunior_ViktorFagionato",
  "version": "1.0.0",
  "description": "teste t√©cnico para vaga NodeJS Junior",
  "author": "Viktor Fagionato",
  "main": "src/main/index.js",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "test": "jest --colors --noStackTrace --passWithNoTests --runInBand",
    "test:unit": "yarn test -- --watch -c jest-unit-config.js",
    "test:integration": "yarn test -- --watch -c jest-integration-config.js",
    "test:staged": "yarn test -- --findRelatedTests --silent",
    "test:ci": "yarn test -- --converage --silent",
    "migrations": "yarn sequelize db:migrate",
    "seeds": "yarn sequelize db:seed:all",
    "start": "yarn migrations && yarn seeds && nodemon src/main/server.js"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "eslint": "^7.12.1",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^7.0.0",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "sequelize-cli": "^6.4.1"
  },
  "dependencies": {
    "express": "^4.17.3",
    "fast-glob": "^3.2.11",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.18.0"
  }
}
